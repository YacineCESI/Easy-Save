<Window x:Class="EasySaveV2.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveV2"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid Name="Settings" Margin="10">
        <Label Content="Change Language" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
        <ComboBox Name="LanguageComboBox" Grid.Row="0" Grid.Column="1" Margin="5,25,0,0" VerticalAlignment="Top" SelectionChanged="Change_Language_Settings">
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="French"/>
        </ComboBox>
        <Label Content="Current Process" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="0,62,0,0"/>
        <TextBox Name="CurrentProcessTextBox" Margin="5,90,0,0" VerticalAlignment="Top" IsReadOnly="True"/>
        <TextBox Name="Path" Grid.Column="0" VerticalAlignment="Top" Margin="5,126,0,0" IsReadOnly="True"/>
        <Button Name="SaveChangesButton" Content="Save" Grid.Row="6" Grid.Column="0" Margin="5,211,0,5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" Click="SaveChangesButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" Grid.Row="6" Grid.Column="1" Margin="5,211,0,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="CancelButton_Click"/>
    </Grid>
</Window>
