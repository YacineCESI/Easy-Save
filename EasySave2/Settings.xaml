<Window x:Class="EasySaveV2.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveV2"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid Name="Settings" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Change Language" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <ComboBox Name="LanguageComboBox" Grid.Row="1" Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Top" SelectionChanged="Change_Language_Settings">
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="French"/>
        </ComboBox>

        <Label Content="Extension file" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" Margin="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <CheckBox Name="PdfCheckBox" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <Label Content="PDF" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>

                <CheckBox Name="ExeCheckBox" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"/>
                <Label Content="EXE" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" Margin="10,0,0,0"/>

                <CheckBox Name="DocxCheckBox" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <Label Content="DOCX" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>

                <CheckBox Name="ClsCheckBox" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center"/>
                <Label Content="CLS" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <Button Name="SaveChangesButton" Content="Save" Grid.Row="6" Grid.Column="0" Margin="5,211,0,5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" Click="SaveChangesButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" Grid.Row="6" Grid.Column="1" Margin="5,211,0,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="CancelButton_Click"/>
    </Grid>
</Window>
